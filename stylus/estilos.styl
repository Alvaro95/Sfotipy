@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181


body
	font-size 16px
	font-family 'Varela Round', sans-serif;
figure
	margin 0
	img
		width 100%
a 
	text-decoration none
.author
	color gris_claro
.button-menu
	position absolute
	top 50%
	margin-top -.5em
	left .5em
.border-bottom
	border-bottom 1px solid gris_claro
.container
	font-size 0
	padding 1.4rem
	text-align center
.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.menu
	display none
.name
	color gris_oscuro
.relative 
	position relative
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8em
	&:nth-child(even)
		margin-right 0
	p 
		margin .5em 0
	
	
